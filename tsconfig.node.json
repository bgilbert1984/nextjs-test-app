{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "moduleResolution": "bundler"
  },
  "include": ["vite.config.ts", "**/*.ts", "**/*.tsx"]
}
